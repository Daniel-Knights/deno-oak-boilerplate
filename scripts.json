{
    "$schema": "https://deno.land/x/denon/schema.json",
    "scripts": {
        "start": {
            "cmd": "deno run -c tsconfig.json --allow-net --allow-read --allow-write --allow-plugin --allow-env --unstable app.ts",
            "desc": "run my app.ts file"
        }
    },
    "watcher": { "match": ["**/*.*"] }
}
