{
    "$schema": "https://deno.land/x/denon/schema.json",
    "allow": ["net", "read", "write", "plugin", "env"],
    "scripts": {
        "start": {
            "cmd": "deno run --unstable app.ts",
            "desc": "run my app.ts file"
        },
        "reload": {
            "cmd": "deno run --reload --unstable app.ts",
            "desc": "reload deps"
        }
    },
    "watcher": { "match": ["**/*.*"] }
}
